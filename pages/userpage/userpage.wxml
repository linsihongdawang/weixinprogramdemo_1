<!--pages/userpage/userpage.wxml-->
<!-- 用户登录区域 -->
<view class="login_area">
<block wx:if="{{isLogin}}">
<image class="user_image" src="{{userImg}}"></image>
<text>{{nickName}}</text>
</block>
<!-- 如果用户未登录则显示未登录状态 -->
<block wx:else>
<image class="user_image" src="{{userImg}}"></image>
<button size="mini" 
        open-type="getUserInfo" 
        bindgetuserinfo="getUserInfo">获取微信头像
</button>
</block>
</view>
<!-- 用户收藏列表 -->
<view class="user_favorite">
<text>我的收藏:({{favorite_num}})</text>
<!-- 新闻列表 -->
<view class="new_list">
<!-- 每个小的新闻item -->
<view class="new_item" wx:for="{{newList}}" wx:key="{{item.id}}">
<image src="{{item.poster}}"></image>
<text>{{item.title}}</text>
</view>
</view>
</view>